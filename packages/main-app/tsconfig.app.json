{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts", 
    "src/**/*", 
    "src/**/*.vue",
    "../core-lib/src/**/*.ts",
    "../core-lib/src/**/*.vue"
  ],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "composite": true,
    "paths": {
      "@/*": ["./src/*"],
      "@vue-hr-management-system/core-lib": ["../core-lib/src"]
    }
  }
}